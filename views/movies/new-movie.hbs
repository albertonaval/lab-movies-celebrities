<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Create Movie</h1>
            <form action="/movies/create" method="POST"> {{!--Action === Ruta en donde se encuentra el form --}}
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="mb-3">
                    <label for="genre" class="form-label">Genre</label>
                    <input type="text" class="form-control" id="genre" name="genre">
                </div>

                <div class="mb-3">
                    <label for="plot" class="form-label">Plot</label>
                    <input type="text" class="form-control" id="plot" name="plot">
                </div>
                <div class="mb-3">
                    <label for="plot" class="form-label">Cast</label>
                    <select multiple="true" class="form-control" id="cast" name="cast">
                        {{#each celebrities}}
                        <option value="{{_id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Create Movie</button>
                </div>
            </form>
            <hr>
        </div>
    </div>
    <a href="/" class="btn btn-dark">Go Home</a>
</div>


