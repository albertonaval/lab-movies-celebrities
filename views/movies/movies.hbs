<div class="container mt-4">
    <h2>Movies</h2>
    <hr>
    <div class="row gp-4 m-4 d-flex justify-content-center alig-items-center">
        {{#each movies}}
        <div class="d-flex card col-md-4 p-3 m-1 card-style">
            <div class="p-3 card-style mb-1">
                <img
                    src="https://external-content.duckduckgo.com/iu/?u=http%3A%2F%2Fwww.pngmart.com%2Ffiles%2F5%2FMovie-PNG-Image.png&f=1&nofb=1&ipt=f276342d2f559dc65a922aed1fa1b418b4fd6c99af2e30cdba31e3429b58bd3d&ipo=images">
                <h4 class="card-title pt-3 text"><a href="movies/movie-details/{{_id}}">{{title}}</a></h4>
                <p>title</p>
            </div>
        </div>
        {{/each}}
        <div class="d-grid col-md-4">
            <a href="/movies/create" class="btn btn-outline-success p-3 m-1">Create a new Movie</a>
            <a href="/" class="btn btn-outline-dark p-3 m-1 d-block">Go Home</a>
        </div>
    </div>
</div>
